{
  "name": "mantaku",
  "version": "1.0.3",
  "description": "This is a tool designed for manga enthusiasts, allowing you to easily download your favorite mangas from online sources to your local storage.",
  "main": "cli.js",
  "dependencies": {
    "@cliqz/adblocker-puppeteer": "^1.33.0",
    "@inquirer/prompts": "^5.3.8",
    "@lesjoursfr/html-to-epub": "^4.4.0",
    "cli-progress": "^3.12.0",
    "debug": "^2.6.9",
    "fs-extra": "^8.1.0",
    "image-type": "^5.2.0",
    "jimp": "^1.3.0",
    "jszip": "^3.2.2",
    "mime": "^2.6.0",
    "puppeteer-core": "^1.20.0",
    "rimraf": "^3.0.0",
    "webp-converter": "^2.3.3",
    "yoctocolors-cjs": "^2.1.2"
  },
  "pkg": {
    "scripts": [
      "sites/*.js",
      "*.js",
      "setting-sample.json"
    ],
    "assets": "webconverter/*",
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "build-mac": "./script/build-mac.sh",
    "build-win": "./script/build-win.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "manga",
    "comic",
    "download"
  ],
  "author": "Sirius",
  "license": "Apache License",
  "devDependencies": {
    "esbuild": "^0.23.1"
  }
}
